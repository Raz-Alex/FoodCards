<div class="slidecontainer">
    <label>
        @Title
        <input type="range" min="1" max="100" @bind="@Value" class="slider" 
        @oninput="(EventArgs) => SetValue()" />
    </label>
</div>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public int Value { get; set; } = 20; 

    [Parameter]
    public Action<int> Action { get; set; }

    void SetValue()
    {
        if (Action == null)
            return;

        Action(Value);
    }
}
